<div class="authform">
  <h3>Fill the form to check offers</h3>
  <%= form_tag(offers_offers_path, :method => :get, :role => 'form', remote: true) do %>

      <fieldset>
        <p>The unique User ID, as used internally in your application</p>
        <div class="form-group">
          <label>UID</label>
          <%= text_field_tag :uid, '', class: 'form-control', required: true %>
        </div>
       </fieldset>

      <fieldset>
        <p>Custom parameters</p>
        <div class="form-group">
          <label>Pub0</label>
          <%= text_field_tag :pub0, '', class: 'form-control', required: true %>
        </div>
      </fieldset>

      <fieldset>
        <p>The page of the response set that you are requesting.</p>
        <div class="form-group">
          <label>Page</label>
          <%= text_field_tag :page, '', class: 'form-control', required: true %>
        </div>
      </fieldset>

      <%= submit_tag 'Check offers', :class => 'button right' %>
  <% end %>
</div>

